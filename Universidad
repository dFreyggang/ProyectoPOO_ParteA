public class Universidad {

    private String nombre;
    private String rector;
    private ListaEscuela listaEscuela;

    public Universidad (String nombre, String rector, int cantEscuelas) {
        this.nombre = nombre;
        this.rector = rector;
        this.listaEscuela =  new ListaEscuela(cantEscuelas);
    }

    public boolean agregarEscuela (Escuela nuevo) {
        return listaEscuela.agregarEscuela(nuevo);
    }

    public boolean editarEscuela (Escuela nuevo) {
        return  listaEscuela.editarEscuela(nuevo.getCodigo(), nuevo.getNombre());
    }

    public boolean eliminarEscuela (Escuela nuevo) {
        return listaEscuela.eliminarEscuela(nuevo.getCodigo());
    }
}