public class ListaAsignaturasPorCarrera {

    private Asignatura listaAsignatura[];

    public ListaAsignaturasPorCarrera (int cantAsignaturas) {
        this.listaAsignatura = new Asignatura[cantAsignaturas];
    }

//METODOS PARA ASIGNATURA
    public boolean buscarAsignatura (int codigo) {
        for (int i = 0; i < listaAsignatura.length; i++) {
            if (listaAsignatura[i] != null && listaAsignatura[i].getcodigo() == codigo) {
                return true;
            }
        }
        return false;
    }

    public boolean agregarAsignatura (Asignatura nuevo) {
        if ((nuevo != null) && (!buscarAsignatura(nuevo.getcodigo()))) {
            for (int i = 0; i < listaAsignatura.length; i++) {
                if (listaAsignatura[i] == null) {
                    listaAsignatura[i] = nuevo;
                    return true;
                }
            }
        }
        return false;
    }

    public boolean editarAsignatura (int codigo, String nombre) {
        for (int i = 0; i < listaAsignatura.length; i++) {
            if (listaAsignatura[i] != null && listaAsignatura[i].getcodigo() == codigo) {
                listaAsignatura[i].setNombre(nombre);
                return true;
            }
        }
        return false;
    }

    public boolean eliminarAsignatura (int codigo) {
        for (int i = 0; i < listaAsignatura.length; i++) {
            if (listaAsignatura[i] != null && listaAsignatura[i].getcodigo() == codigo) {
                listaAsignatura[i] = null;
                return true;
            }
        }
        return false;
    }

//METODOS PARA NOTAS

}