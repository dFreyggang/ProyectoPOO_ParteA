public class ListaEscuela {

    private Escuela listaEscuela[];

    public ListaEscuela (int cantEscuelas) {

        this.listaEscuela = new Escuela[cantEscuelas];
    }

    public boolean buscarEscuela (int codigo) {
        for (int i = 0; i < listaEscuela.length; i++) {
            if (listaEscuela[i] != null && listaEscuela[i].getCodigo() == codigo) {
                return true;
            }
        }
        return false;
    }

    public boolean agregarEscuela (Escuela nuevo) {
        if (nuevo != null && !buscarEscuela(nuevo.getCodigo())) {
            for (int i = 0; i < listaEscuela.length; i++) {
                if (listaEscuela[i] == null) {
                    listaEscuela[i] = nuevo;
                    return true;
                }
            }
        }
        return false;
    }

    public boolean editarEscuela (int codigo, String nombre) {
        for (int i = 0; i < listaEscuela.length; i++) {
            if (listaEscuela[i] != null && listaEscuela[i].getCodigo() == codigo) {
                listaEscuela[i].setNombre(nombre);
                return true;
            }
        }
        return  false;
    }

    public boolean eliminarEscuela (int codigo) {
        for (int i = 0; i < listaEscuela.length; i++) {
            if (listaEscuela[i] != null && listaEscuela[i].getCodigo() == codigo) {
                listaEscuela[i] = null;
                return true;
            }
        }
        return false;
    }

}