public class Asignatura {

    private int codigo;
    private String nombre;
    private double notas[]; //NO COMPACTA
    private ListaDocentes listaDocentes[]; //NO COMPACTA
    private ListaAlumnosPorAsignatura listaAlumnos[]; //NO COMPACTA

//CONTRUCTORES CON NOTAS (PARA ALUMNO)
    public Asignatura (int codigo, String nombre, int cantDocentes, int cantAlumnos, cantNotas) {
        this.codigo = codigo;
        this.nombre = nombre;
        this.listaDocentes = new ListaDocentes[cantDocentes];
        this.listaAlumnos = new ListaAlumnosPorAsignatura[cantAlumnos];
        this.notas = new double[cantNotas];
    }

//CONTRUCTORES SIN NOTA (PARA CARRERA)
    public Asignatura (int codigo, String nombre, int cantDocentes, int cantAlumnos) {
        this.codigo = codigo;
        this.nombre = nombre;
        this.listaDocentes = new ListaDocentes[cantDocentes];
        this.listaAlumnos = new ListaAlumnosPorAsignatura[cantAlumnos];
        this.notas = 0.0;
    }    

    public int getcodigo () {
        return codigo;
    }

    public void setCodigo (int codigo) {
        this.codigo = codigo;
    }

    public String getNombre () {
        return nombre;
    } 

    public void setNombre (String nombre) {
        this.nombre = nombre;
    }

    public double getNotas () {
        return notas;
    }

}
