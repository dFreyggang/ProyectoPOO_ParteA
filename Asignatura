public class Asignatura {

    private int codigo;
    private String nombre;
    private ListaEvaluaciones notas[]; //NO COMPACTA
    private ListaAlumnosPorAsignatura listaAlumnos[]; //NO COMPACTA

//CONTRUCTORES CON NOTAS (PARA ALUMNO)
    public Asignatura (int codigo, String nombre, int cantAlumnos, int cantNotas) {
        this.codigo = codigo;
        this.nombre = nombre;
        this.listaAlumnos = new ListaAlumnosPorAsignatura[cantAlumnos];
        this.notas = new double[cantNotas];
    }

//CONTRUCTORES SIN NOTA (PARA CARRERA)
    public Asignatura (int codigo, String nombre, int cantAlumnos) {
        this.codigo = codigo;
        this.nombre = nombre;
        this.listaAlumnos = new ListaAlumnosPorAsignatura[cantAlumnos];
        this.notas = new double[-1];
    }

    public int getcodigo () {
        return codigo;
    }

    public void setCodigo (int codigo) {
        this.codigo = codigo;
    }

    public String getNombre () {
        return nombre;
    }

    public void setNombre (String nombre) {
        this.nombre = nombre;
    }

    public double getNotas () {
        return notas[100];
    }
/*
    public void setNotas (double notas) {
        this.notas = notas[100];
    }
*/
}
