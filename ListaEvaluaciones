public class ListaEvaluaciones{

	private double notasAsignatura[];

	//CONSTRUCTOR
	public ListaEvaluaciones(int cantNotas){
		this.notasAsignatura = new double[cantNotas];
	}

	//METODOS
	public double PromedioAlumno (){

        double sumaAsignaturas = 0;
		double promedioAlumno;
		int contadorNotas = 0;

		for(int i = 0; i < notasAsignatura.length; i++) {
            if (notasAsignatura[i] != null) {
                sumaAsignaturas += notasAsignatura[i];
                contadorNotas++;       
            }
        }
		promedioAlumno = (sumaAsignaturas/contadorNotas);
		return promedioAlumno;
	}
    
	
}